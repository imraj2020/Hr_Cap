                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ToTime: "
                android:textStyle="bold"
                android:textColor="@color/black" />

                <TextView
                    android:id="@+id/a_ToTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ToTime: "
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
