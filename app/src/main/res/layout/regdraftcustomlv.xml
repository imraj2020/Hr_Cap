<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/regdraftcard"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/linears"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Create Id:"
            android:id="@+id/tv_Create_id"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Create Time:"
            android:id="@+id/tv_create_times"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Reason:"
            android:textDirection="rtl"
            android:paddingRight="10dp"
            android:id="@+id/tv_reasonsa"/>


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_delete"
            android:layout_gravity="center"
            android:background="@drawable/deletebutton">
        </ImageButton>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_view"
            android:layout_gravity="center"
            android:background="@drawable/view">

        </ImageButton>





    </LinearLayout>



</androidx.cardview.widget.CardView>